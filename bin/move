#!/usr/bin/env ruby

require_relative '../lib/move.rb'

# Code your CLI Here
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"
puts "Where Would You Like To Go?"

input = gets.strip
index = input.to_i
input_to_index(index)

move(board,input_to_index,character = "X")

puts display_board(board)